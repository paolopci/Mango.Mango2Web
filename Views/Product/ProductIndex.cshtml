@using System.Diagnostics
@model IEnumerable<ProductDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-0">
        <div class="row">
            <div class="col-12 text-center">
                Products List
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i>Create New Product</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>ImageUrl</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prod in Model)
                {
                    <tr>
                        <td>@prod.Name</td>
                        <td>@((prod.Price).ToString("C"))</td>
                        <td>@prod.Description</td>
                        <td>@prod.CategoryName</td>
                        <td>@prod.ImageUrl</td>
                        <td>
                            <a asp-action="ProductDelete" asp-route-productId="@prod.ProductId" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>